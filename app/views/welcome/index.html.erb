<div class="row">
  <div class="col-md-6">
    <%= in_out_select(@attendances).html_safe %>
  </div>
  <div class="col-md-6">
    <h3><%= current_user.full_name %></h3>
    <h4><%= current_user.email %></h4>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Attendance of <%= current_user.full_name %></h3>
    </div>
    <div class="panel-body">
      <table class="table table-responsive">
        <thead>
        <tr>
          <th>Date</th>
          <th>In</th>
          <th>Out</th>
          <th>Duration</th>
        </tr>
        </thead>
        <tbody>
        <% @attendances.each do |attendance| %>
            <tr>
              <td><%= attendance.in_date %></td>
              <td><%= attendance.in_time %></td>
              <td><%= attendance.out_time %></td>
              <td><%= attendance.duration %></td>
            </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>
