<div class="row">
  <div class="col-md-6">
    <% if @current_employee.attends.present? %>
        <% if @current_employee.attends.last.out_time.present? %>
            <%= link_to attends_path, method: :post do%>
                <button class="btn btn-success">In</button>
            <%end%>
        <% else %>
            <%= link_to attend_path(id:@current_employee.attends.last.id), method: :put do%>
                <button class="btn btn-success">Out</button>
            <%end%>
        <% end %>
    <% else %>
      <%= link_to attends_path, method: :post do%>
        <button class="btn btn-success">In</button>
      <%end%>
    <% end%>
  </div>
  <div class="col-md-6">
    <h3><%= @current_employee.first_name + ' ' + @current_employee.last_name %></h3>
    <h4><%= @current_employee.email %></h4>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Attendance of <%= @current_employee.first_name + ' ' + @current_employee.last_name %></h3>
    </div>
    <div class="panel-body">
      <table class="table table-responsive">
        <thead>
        <tr>
          <th>Date</th>
          <th>In</th>
          <th>Out</th>
          <th>Duration</th>
        </tr>
        </thead>
        <tbody>
        <% @attendances.each do |attendance| %>
            <tr>
              <td><%= attendance.in_date %></td>
              <td><%= attendance.in_time %></td>
              <td><%= attendance.out_time %></td>
              <td><%= attendance.duration %></td>
            </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>